show-virtual-hosts() {
  echo -e "\nğŸ“‹ Lista virtualhostÃ³w NGINX:\n"
  for file in /etc/nginx/sites-available/*; do
    [ -f "$file" ] || continue
    HOST=$(basename "$file")
    ROOT=$(grep -Po 'root\s+\K[^;]+' "$file" | head -n 1)
    printf "ğŸŒ %-30s â†’ %s\n" "$HOST" "$ROOT"
  done
  echo
}
