rm-virtual-host() {
  HOST="$1"

  if [ -z "$HOST" ]; then
    echo "âŒ UÅ¼ycie: rm-virtual-host [host]"
    return 1
  fi

  SITE_AVAILABLE="/etc/nginx/sites-available/$HOST"
  SITE_ENABLED="/etc/nginx/sites-enabled/$HOST"
  LOG_DIR="/var/log/nginx/$HOST"

  if [ ! -f "$SITE_AVAILABLE" ]; then
    echo "âŒ Virtualhost '$HOST' nie istnieje w sites-available."
    return 1
  fi

  echo "âš ï¸  Uwaga: to usunie konfiguracjÄ™ i logi virtualhosta: $HOST"
  read "confirm?Czy na pewno? (Y/n): "
  if [[ "$confirm" != "Y" ]]; then
    echo "âŒ Anulowano."
    return 1
  fi

  echo "ğŸ—‘ï¸  Usuwam virtualhost '$HOST'"

  echo "ğŸ—‘ï¸  Usuwam plik $SITE_AVAILABLE"
  sudo rm -f "$SITE_AVAILABLE"

  echo "ğŸ—‘ï¸  Usuwam plik $SITE_ENABLED"
  sudo rm -f "$SITE_ENABLED"

  echo "ğŸ—‘ï¸  Usuwam katalog $LOG_DIR"
  sudo rm -rf "$LOG_DIR"

  # UsuÅ„ wpis z /etc/hosts (opcjonalnie)
  if grep -q "$HOST" /etc/hosts; then
    echo "ğŸ§¹ Usuwam wpis z /etc/hosts"
    sudo sed -i "/[[:space:]]$HOST$/d" /etc/hosts
  fi

  echo "ğŸ”„ PrzeÅ‚adowujÄ™ NGINX..."
  sudo systemctl reload nginx

  echo "âœ… Virtualhost '$HOST' zostaÅ‚ usuniÄ™ty."
}
